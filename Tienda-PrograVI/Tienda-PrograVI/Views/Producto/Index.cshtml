@model IEnumerable<Tienda_PrograVI.Models.Producto>

@{
    ViewData["Title"] = "Listado de Productos";
}

<h1>Producto</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Producto</a>
</p>

<table id="tablaProductos" class="display table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Categoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio</td>
                <td>@producto.Stock</td>
                <td>@producto.Categoria?.Tipo_categoria</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@producto.Id_producto" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@producto.Id_producto" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            $('#tablaProductos').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                }
            });
        });
    </script>
}
